# Build recipe for nghttp2.
#
# Exit immediately on any error
set -e

program=nghttp2
version=1.68.0
release=0
pkgcategory=networking
description="
HTTP/2 C library.

This is an implementation of the Hypertext Transfer Protocol version 2 in
C.  The framing layer of HTTP/2 is implemented as a reusable C library.
"
homepage=https://nghttp2.org/
license=MIT

tarname=${program}-${version}.tar.bz2
fetch=https://github.com/nghttp2/nghttp2/releases/download/v${version}/$tarname

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README.rst"
docsdir="${docdir}/${program}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" CXXFLAGS="$QICXXFLAGS" \
    LDFLAGS="$QILDFLAGS" \
     $configure_args \
     --libdir=/usr/lib \
     --infodir=$infodir \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-static=yes \
     --enable-shared=yes \
     --enable-lib-only \
     --without-systemd \
     --disable-examples \
     --disable-http3 \
     --without-jansson \
     --without-jemalloc \
     --without-libbpf \
     --without-libnghttp3 \
     --without-libngtcp2 \
     --without-libxml2 \
     --without-mruby \
     --without-neverbleed \
     --without-cunit \
     --build="$(gcc -dumpmachine)"

    make -j2
    make -j2 DESTDIR="$destdir" install
}
