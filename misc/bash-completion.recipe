# Build recipe for bash-completion.
#
# Exit immediately on any error
set -e

program=bash-completion
version=2.16.0
release=0
pkgctegory=misc
description="Command-line tab-completion for bash"
homepage="https://github.com/scop/bash-completion"
license="GPL-2.0-or-later"
arch=noarch

tarname=bash-completion-$version.tar.xz
fetch="https://github.com/scop/bash-completion/releases/download/$version/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	autoreconf -fiv
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var

	make 
	make DESTDIR="$destdir" install 
}
