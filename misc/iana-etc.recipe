# Build recipe for iana-etc.
#
# Exit immediately on any error
set -e

program=iana-etc
version=20250807
release=0
description="package provides data for network services and protocols"
homepage="https://github.com/Mic92/iana-etc"
license="MIT"

tarname=iana-etc-20250807.tar.gz
fetch="https://github.com/Mic92/iana-etc/releases/download/20250807/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	mkdir "$destdir"/etc
	cp services protocols "$destdir"/etc
}
