# Build recipe for adwaita-fonts.
#
# Exit immediately on any error
set -e

program=adwaita-fonts
version=49.0
release=0
description="The typefaces for GNOME"
homepage="https://gitlab.gnome.org/GNOME/adwaita-fonts"
license="GPL-3.0-or-later"

tarname=adwaita-fonts-$version.tar.xz
fetch="https://download.gnome.org/sources/adwaita-fonts/${version%%.*}/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	rm -rf BUILD
	mkdir BUILD
	cd BUILD
	
	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args ..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install
	
	cd ..
}
