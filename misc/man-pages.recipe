# Build recipe for man-pages.
#
# Exit immediately on any error
set -e

program=man-pages
version=6.15
release=0
description="Linux man pages"
homepage="https://www.kernel.org/doc/man-pages/"
license="GPL-2.0-or-later"
arch="noarch"

tarname=man-pages-$version.tar.xz
fetch="https://cdn.kernel.org/pub/linux/docs/man-pages/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	rm -v man3/crypt*

	make -R GIT=false DESTDIR="$destdir" prefix=/usr install 
}
