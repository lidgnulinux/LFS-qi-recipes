# Build recipe for debian-archive-keyring.
#
# Exit immediately on any error
set -e

program=debian-archive-keyring
version=2025.1
release=0
description="GnuPG archive keys of the Debian archive"
homepage="https://packages.debian.org/sid/debian-archive-keyring"
license="GPL-2.0-or-late"

tarname=debian-archive-keyring_${version}_all.deb
fetch="https://deb.debian.org/debian/pool/main/d/debian-archive-keyring/$tarname"

build() 
{
	mkdir -p /usr/src/qi/build/debian-archive-keyring
	cd /usr/src/qi/build/debian-archive-keyring

	cp -r "$tardir/$tarname" /usr/src/qi/build/debian-archive-keyring
	ar x debian-archive-keyring_2025.1_all.deb

	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	mkdir -p "$destdir"
	unxz -c data.tar.xz | tar -x -C "$destdir"/
}
