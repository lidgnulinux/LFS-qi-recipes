# Build recipe for xorg-xmessage.
#
# Exit immediately on any error
set -e

program=xorg-xmessage
version=1.0.7
release=0
description="Display a message or query in a window"
homepage="https://gitlab.freedesktop.org/xorg/app/xmessage"
license="X11"

tarname=xmessage-${version}.tar.xz
fetch="https://xorg.freedesktop.org/archive/individual/app/$tarname"
srcdir=xmessage-${version}

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	./configure --prefix=/usr --libdir=/usr/lib 

	make -j2 
	make DESTDIR="$destdir" install 
}
