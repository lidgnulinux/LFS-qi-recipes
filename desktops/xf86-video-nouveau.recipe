# Build recipe for xf86-video-nouveau.
#
# Exit immediately on any error
set -e

program=xf86-video-nouveau
version=1.0.18
release=0
pkgcategory=xorg_driver
description="Nouveau video driver for the Xorg X server."
homepage=https://nouveau.freedesktop.org/
license="MIT"

tarname=xf86-video-nouveau-$version.tar.xz
fetch="https://www.x.org/archive/individual/driver/$tarname"

build()
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	export CFLAGS="${CFLAGS/-fno-plt}"
	export CXXFLAGS="${CXXFLAGS/-fno-plt}"
	export LDFLAGS="$LDFLAGS -Wl,-z,lazy"
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var

	make -j2 V=1
	make -j2 DESTDIR="$destdir" install
}

