# Build recipe for bison.
#
# Exit immediately on any error
set -e

program=bison
version=3.8.2
release=0
description="The GNU general-purpose parser generator"
homepage="https://www.gnu.org/software/bison/bison.html"
license="GPL-3.0-or-later"

tarname=bison-$version.tar.xz
fetch="https://ftp.gnu.org/gnu/bison/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/gcc15-glibcxx-assertions.patch

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info

	make -j2 
	make DESTDIR="$destdir" install 

	rm -rf "$destdir"/usr/lib/charset.alias
	rmdir -p "$destdir"/usr/lib 2>/dev/null || true
}
