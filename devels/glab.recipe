# Build recipe for glab.
#

# Exit immediately on any error
set -e

program=glab
version=1.65.0
release=0

# Define a category for the output of the package name
pkgcategory=devel

tarname=glab_1.65.0_linux_amd64.tar.gz

# Remote source(s)
fetch="https://gitlab.com/gitlab-org/cli/-/releases/v1.65.0/downloads/$tarname"

description="GLab is an open source GitLab CLI tool that brings GitLab to your command line."

homepage=https://gitlab.com/gitlab-org/cli
license="MIT License"

build()
{
    mkdir glab
    tar -xf "${tardir}/$tarname" -C glab

    cd glab

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    mkdir "$destdir"/usr
    cp -r bin "$destdir"/usr/
    cd ..
    rm -rf glab
}
