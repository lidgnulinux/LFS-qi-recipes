# Build recipe for spirv-llvm-translator.
#
# Exit immediately on any error
set -e

program=spirv-llvm-translator
_pkgname=SPIRV-LLVM-Translator
version=20.1.8
release=0
description="Library for bi-directional translation between SPIR-V and LLVM IR"
homepage="https://github.com/KhronosGroup/SPIRV-LLVM-Translator"
license="NCSA"

tarname=$_pkgname-$version.tar.gz
fetch="https://github.com/KhronosGroup/SPIRV-LLVM-Translator/archive/v$version/$tarname"

srcdir=$_pkgname-$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	CC=clang \
	CXX=clang++ \
	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DBUILD_SHARED_LIBS=True \
		-DLLVM_SPIRV_INCLUDE_TESTS=1 \
		-DLLVM_EXTERNAL_SPIRV_HEADERS_SOURCE_DIR=/usr/include/spirv
	cmake --build build

	DESTDIR="$destdir" cmake --install build
}
