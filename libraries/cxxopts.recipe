# Build recipe for cxxopts.
#
# Exit immediately on any error
set -e

program=cxxopts
version=3.3.1
release=0
description="Lightweight C++ command line option parser as a header only library"
homepage="https://github.com/jarro2783/cxxopts"
license="MIT"

tarname=cxxopts-$version.tar.gz
fetch="https://github.com/jarro2783/cxxopts/archive/v$version/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	cmake -B build -G Ninja \
		-DBUILD_SHARED_LIBS=ON \
		-DCMAKE_BUILD_TYPE=None \
		-DCMAKE_INSTALL_PREFIX=/usr \
		-DCMAKE_INSTALL_LIBDIR=/usr/lib \
		-DCXXOPTS_BUILD_TESTS=ON
	cmake --build build

	DESTDIR="$destdir" cmake --install build
}
