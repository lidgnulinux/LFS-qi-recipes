# Build recipe for libclc.
#
# Exit immediately on any error
set -e

program=libclc
version=20.1.8
release=0
description="Open source implementation of the library requirements of the OpenCL C programming language"
homepage="https://libclc.llvm.org/"
license="Apache-2.0 WITH LLVM-exception"

tarname=libclc-$version.src.tar.xz
fetch="https://github.com/llvm/llvm-project/releases/download/llvmorg-$version/$tarname"

srcdir=libclc-$version.src

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	cmake -B build -G Ninja \
		-DCMAKE_BUILD_TYPE=Release \
		-DLIBCLC_TARGETS_TO_BUILD="nvptx--;nvptx64--;nvptx--nvidiacl;nvptx64--nvidiacl" \
		-DCMAKE_INSTALL_PREFIX=/usr
	cmake --build build

	DESTDIR="$destdir" cmake --install build
}
