# Build recipe for libmicrodns.
#
# Exit immediately on any error
set -e

program=libmicrodns
version=0.2.0
release=0
description="Minimal mDNS library"
homepage="https://github.com/videolabs/libmicrodns"
license="LGPL-2.1-or-later"

tarname=microdns-$version.tar.xz
fetch="https://github.com/videolabs/libmicrodns/releases/download/$version/$tarname"
srcdir=microdns-$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	rm -rf BUILD
	mkdir BUILD
	cd BUILD
	
	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args ..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install
	
	cd ..
}
