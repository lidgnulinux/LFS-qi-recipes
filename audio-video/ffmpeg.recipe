# Build recipe for ffmpeg.
#
# Exit immediately on any error
set -e

program=ffmpeg
version=8.0
release=0
description="Complete and free Internet live audio and video broadcasting solution for Linux/Unix"
homepage="https://ffmpeg.org/"
license="GPL-2.0-or-later AND LGPL-2.1-or-later"

tarname=ffmpeg-$version.tar.xz
fetch="https://ffmpeg.org/releases/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 < ${worktree}/add-av_stream_get_first_dts-for-chromium.patch 
	patch -p1 < ${worktree}/0001-Revert-configure-rename-POSIX-ioctl-check.patch

	./configure \
		--prefix=/usr \
		--disable-librtmp \
		--disable-lzma \
		--disable-static \
		--disable-stripping \
		--disable-doc \
		--disable-htmlpages \
		--disable-manpages \
		--disable-podpages \
		--disable-txtpages \
		--enable-avfilter \
		--enable-gpl \
		--enable-ladspa \
		--enable-libaom \
		--enable-libass \
		--enable-libbluray \
		--enable-libdav1d \
		--enable-libdrm \
		--enable-libfontconfig \
		--enable-libfreetype \
		--enable-libfribidi \
		--enable-libharfbuzz \
		--enable-libmp3lame \
		--enable-libopus \
		--enable-libplacebo \
		--enable-libsoxr \
		--enable-libsrt \
		--enable-libv4l2 \
		--enable-libx264 \
		--enable-libxcb \
		--enable-libxml2 \
		--enable-lto=auto \
		--enable-pic \
		--enable-pthreads \
		--enable-shared \
		--enable-vaapi \
		--enable-libvorbis \
		--enable-vdpau \
		--enable-version3 \
		--enable-vulkan \
		--enable-asm \
		--enable-libssh \
		--enable-libpulse \
		--disable-openssl 

	make -j4 
	make DESTDIR="$destdir" install  
}
