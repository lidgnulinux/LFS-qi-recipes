# Build recipe for clapper.
#
# Exit immediately on any error
set -e

program=clapper
version=0.8.0
release=2
description="Modern media player designed for simplicity and ease of use"
homepage="https://github.com/Rafostar/clapper"
license="GPL-3.0-or-later"

tarname=$version.tar.gz
fetch="https://github.com/Rafostar/clapper/archive/refs/tags/$tarname"
ldpath="/usr/lib/gstreamer-1.0/"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	rm -rf BUILD
	mkdir BUILD
	cd BUILD
	
	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args \
		-Dintrospection=enabled \
		-Denhancers-loader=disabled \
		..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install
	
	cd ..
}
