# Build recipe for mesa-demos.
#
# Exit immediately on any error
set -e

program=mesa-demos
version=9.0.0
release=0
description="Mesa demos"
homepage="https://mesa3d.org"
license="custom"

tarname=mesa-demos-$version.tar.xz
fetch="https://archive.mesa3d.org/demos/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/glx.patch
	patch -p1 -i ${worktree}/uint.patch
	patch -p1 -i ${worktree}/mesa-demos-system-data.patch

	rm -rf BUILD
	mkdir BUILD
	cd BUILD
	
	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args \
		-Degl=enabled \
		-Dgles1=disabled \
		-Dlibdrm=enabled \
		-Dvulkan=enabled \
		-Dwayland=enabled \
		-Dwith-system-data-files=true \
		-Dx11=enabled \
		..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install
	
	cd ..
}
