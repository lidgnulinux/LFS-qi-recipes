# Build recipe for pacman.
#
# Exit immediately on any error
set -e

program=pacman
version=7.0.0
release=1
description="A simple library-based package manager"
homepage="https://www.archlinux.org/pacman/"
license="GPL-2.0-or-later"

tarname=pacman-v$version.tar.gz
fetch="https://gitlab.archlinux.org/pacman/pacman/-/archive/v$version/$tarname"
srcdir=pacman-v$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p0 -i ${worktree}/remove-extra-dash-git.patch
	
	rm -rf BUILD
	mkdir BUILD
	cd BUILD

	CPPFLAGS="$QICPPFLAGS" CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
	meson setup $configure_args \
		-Dscriptlet-shell=/usr/bin/bash \
		-Di18n=true \
		-Ddoc=disabled \
		..
	
	ninja -j2
	DESTDIR="$destdir" ninja -j2 install

	cp -r ${worktree}/doc/man ${destdir}/usr/share
	
	cd ..
}
