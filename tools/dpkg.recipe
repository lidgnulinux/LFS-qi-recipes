# Build recipe for dpkg.
#
# Exit immediately on any error
set -e

program=dpkg
version=1.22.21
release=0
description="The Debian Package Manager"
homepage="https://wiki.debian.org/Teams/Dpkg"
license="GPL-2.0-or-later AND BSD-2-Clause"

tarname=dpkg-$version.tar.bz2
fetch="https://salsa.debian.org/dpkg-team/dpkg/-/archive/$version/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/musl-realpath.patch

	echo "$version" > .dist-version

	autoreconf -vif
	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-libz \
		--with-libbz2 \
		--disable-dselect \
		--disable-start-stop-daemon \
		--disable-nls \
		--disable-static

	make CFLAGS="-lobstack" -j2 
	make DESTDIR="$destdir" install 

	touch "$destdir/var/lib/dpkg"/status
	touch "$destdir/var/lib/dpkg"/available
}
