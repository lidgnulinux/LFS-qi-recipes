# Build recipe for colorpicker.
#
# Exit immediately on any error
set -e

program=colorpicker
version=0_git20201128
release=0
description="simplest command line color picker"
homepage="https://github.com/ym1234/colorpicker"
license="MIT"
commit="782eafb16f1799376d548c93bf2786abc8ebd76e"

tarname=colorpicker-$commit.tar.gz
fetch="https://github.com/ym1234/colorpicker/archive/$commit/$tarname"

srcdir=colorpicker-$commit

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	make 
	make DESTDIR="$destdir" install 
}
