# Build recipe for .
#
# Exit immediately on any error
set -e

program=wireless-tools
version=30_pre9
release=0
description="Open Source wireless tools"
homepage="https://hewlettpackard.github.io/wireless-tools/Tools.html"
license="GPL-2.0-only"

tarname=wireless_tools.${version/_/.}.tar.gz
fetch="https://hewlettpackard.github.io/wireless-tools/$tarname"

srcdir=wireless_tools.30

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/flags.patch
	patch -p1 -i ${worktree}/include-libgen.patch

	CFLAGS="$CFLAGS -flto=auto" make 
	make INSTALL_DIR="$destdir"/usr/sbin \
		INSTALL_LIB="$destdir"/usr/lib \
		INSTALL_INC="$destdir"/usr/include \
		INSTALL_MAN="$destdir"/usr/share/man install
}
