# Build recipe for obex-data-server.
#
# Exit immediately on any error
set -e

program=obex-data-server
version=0.4.6
release=0
description="D-Bus service for Obex access"
homepage="http://wiki.muiline.com/obex-data-server"
license="GPL-2.0-or-later"

tarname=obex-data-server-$version.tar.gz
fetch="https://dev.alpinelinux.org/archive/obex-data-server/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/obex-data-server-0.4.6-build-fixes-1.patch

	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--enable-bip=gdk-pixbuf

	make -j2 
	make DESTDIR="$destdir" install 
}
