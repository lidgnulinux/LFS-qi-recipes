# Build recipe for doas.
#
# Exit immediately on any error
set -e

program=doas
version=6.8.2
release=0
description="OpenBSD's temporary privilege escalation tool"
homepage="https://github.com/Duncaen/OpenDoas"
license="ISC"

tarname=v$version.tar.gz
fetch="https://github.com/Duncaen/OpenDoas/archive/$tarname"

srcdir=OpenDoas-$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/configuration-directory.patch
	patch -p1 -i ${worktree}/manpage-example-path.patch
	patch -p1 -i ${worktree}/change-PATH.patch
	patch -p1 -i ${worktree}/rowhammer.patch

	./configure \
		--prefix=/usr \
		--without-pam \
		--with-timestamp \
		--with-doas-confdir

	make -j2 
	make DESTDIR="$destdir" install 

	install -d -m 750 "$destdir"/etc/doas.d
	install -m 640 ${worktree}/doas.conf -t "$destdir"/etc/

	install -D -m 644 ${worktree}/doas.conf "$destdir"/usr/share/doc/$pkgname/doas.conf.example
}
