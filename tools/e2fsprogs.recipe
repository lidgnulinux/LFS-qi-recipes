# Build recipe for e2fsprogs.
#
# Exit immediately on any error
set -e

program=e2fsprogs
version=1.47.3
release=0
description="Standard Ext2/3/4 filesystem utilities"
homepage="https://e2fsprogs.sourceforge.net/"
license="GPL-2.0-or-later AND LGPL-2.0-or-later AND BSD-3-Clause AND MIT"

tarname=v$version.tar.gz
fetch="https://github.com/tytso/e2fsprogs/archive/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/fix-log-redir.patch
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--localstatedir=/var \
		--with-udev-rules-dir=no \
		--enable-elf-shlibs \
		--enable-symlink-install \
		--disable-fsck \
		--disable-uuidd \
		--disable-libuuid \
		--disable-libblkid \
		--disable-nls

	make -j3 
	make DESTDIR="$destdir" install 
}
