# Build recipe for fontconfig.
#
# Exit immediately on any error
set -e

program=fontconfig
version=2.17.1
release=0
pkgcategory=x-libs
replace=fontconfig-pass1
homepage=https://www.freedesktop.org/wiki/Software/fontconfig/
license=Custom
description="
Library for font configuration.

The fontconfig package is a library for configuring and customizing
font access.
"

tarname=${program}-${version}.tar.xz
fetch=https://gitlab.freedesktop.org/api/v4/projects/890/packages/generic/fontconfig/$version/$tarname

# Source documentation
docs="AUTHORS COPYING ChangeLog NEWS README"
docsdir="${docdir}/${program}-${version}"

build() {
    unpack "${tardir}/$tarname"

    cd "$srcdir"

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LDFLAGS="$QILDFLAGS" \
    $configure_args \
    --libdir=/usr/lib \
    --mandir=$mandir \
    --with-docdir=$docsdir \
    --disable-static \
    --enable-shared \
    --disable-docs \
    --build="$(gcc -dumpmachine)"

    make -j3
    make -j3 DESTDIR="$destdir" install
}
