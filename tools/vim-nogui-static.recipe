# Build recipe for vim static.
#
# Exit immediately on any error
set -e

program=vim
version=9.1.1582 
release=0

pkgname=vim-nogui-static

# Define a category for the output of the package name
pkgcategory=tools

tarname=${program}-${version}.tar.gz

# Remote source(s)
fetch=https://github.com/vim/vim/archive/v${version}/$tarname

homepage=https://www.vim.org

description="
The ubiquitous text editor (tiny version).

Vim is a highly configurable text editor built to make creating and
changing any kind of text very efficient.  It is included as \"vi\"
with most UNIX systems and with Apple OS X.

For more information, visit:  $homepage
"

license=Custom

# Source documentation
docs="CONTRIBUTING.md README.md"
docsdir="${docdir}/${pkgname}-${version}"

build()
{
    unpack "${tardir}/$tarname"

    cd $srcdir

    # Set sane permissions
    chmod -R u+w,go-w,a+rX-s .

    # Workaround for the special 'srcdir' variable, it is internally
    # imported and exported from vim's ./configure
    saved_srcdir=$srcdir
    unset -v srcdir

    ./configure CPPFLAGS="$QICPPFLAGS" \
    CFLAGS="$QICFLAGS" LIBS="-lffi" LDFLAGS="$QILDFLAGS -static" \
     $configure_args \
     --libdir=/usr/lib \
     --mandir=$mandir \
     --docdir=$docsdir \
     --enable-gui=no \
     --enable-multibyte \
     --disable-netbeans \
     --disable-gtktest \
     --disable-icon-cache-update \
     --disable-desktop-database-update \
     --with-features=huge \
     --with-compiledby="LFS musl" \
     --without-x \
     --build="$(gcc -dumpmachine)"

    # Restore 'srcdir'
    srcdir=$saved_srcdir
    unset -v saved_srcdir

    make -j4 V=1
    make -j4 DESTDIR="$destdir" install
}
