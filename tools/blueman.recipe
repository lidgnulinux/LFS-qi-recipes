# Build recipe for blueman.
#
# Exit immediately on any error
set -e

program=blueman
version=2.4.6
release=1
description="GTK+ Bluetooth Manager"
homepage="https://github.com/blueman-project/blueman"
license="GPL-3.0-or-later"

tarname=$version.tar.gz
fetch="https://github.com/blueman-project/blueman/archive/refs/tags/$tarname"

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/dont-rerun-plugin-tests.patch

	autoreconf -vif
	./configure \
		--prefix=/usr \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--disable-schemas-compile

	make 
	make DESTDIR="$destdir" install 
}
