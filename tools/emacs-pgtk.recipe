# Build recipe for emacs.
#
# Exit immediately on any error
set -e

program=emacs-pgtk
version=30.1
release=0
description="Extensible, customizable, self-documenting real-time display editor"
homepage="https://www.gnu.org/software/emacs/emacs.html"
license="GPL-3.0-or-later"
replace=emacs

tarname=emacs-$version.tar.xz
fetch="https://ftp.gnu.org/gnu/emacs/$tarname"
srcdir=emacs-$version

build() 
{
	unpack "${tardir}/$tarname"
	
	cd "$srcdir"
	
	# Set sane permissions
	chmod -R u+w,go-w,a+rX-s .

	patch -p1 -i ${worktree}/no-git-repo.patch

	./autogen.sh
	rm etc/emacs.service # systemd unit

	./configure \
		--prefix=/usr \
		--libdir=/usr/lib \
		--sysconfdir=/etc \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info \
		--localstatedir=/var \
		--with-gameuser=:games \
		--with-harfbuzz \
		--with-x-toolkit=gtk3 \
		--with-pgtk \
		--with-xft \
		--with-jpeg=yes \
		--with-tiff=no \
		--with-native-compilation=no

	make -j2 
	make DESTDIR="$destdir" install 
}
